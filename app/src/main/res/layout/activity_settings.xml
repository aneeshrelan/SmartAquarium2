<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.aneeshrelan.smartaquarium2.MainActivity"
    android:animateLayoutChanges="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:srcCompat="@mipmap/ic_back"
        android:id="@+id/goback"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:onClick="goback"
        android:contentDescription="@string/go_back"
        android:visibility="gone" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.aneeshrelan.smartaqua2.Settings"
        android:stretchColumns="0,1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/heading_local">

            <TextView
                android:text="@string/local_network"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/label_localSettings"
                android:layout_gravity="center"
                android:layout_span="2"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                android:layout_marginBottom="7dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/row_localDomain">

            <TextView
                android:text="@string/ip_domain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/label_localDomain"
                android:labelFor="@+id/text_localDomain" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/text_localDomain"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/row_localPort"
            >

            <TextView
                android:text="@string/port"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/label_localPort"
                android:labelFor="@+id/text_localPort" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/text_localPort"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/row_checkbox"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">

            <CheckBox
                android:text="@string/add_remote_server_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/remoteCheckbox"
                android:layout_span="2"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:textAlignment="viewStart" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:id="@+id/heading_remote">

            <TextView
                android:text="@string/remote_server"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/label_remoteSettings"
                android:layout_gravity="center"
                android:layout_span="2"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                android:layout_marginBottom="7dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:id="@+id/row_remoteDomain">

            <TextView
                android:text="@string/ip_domain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:labelFor="@+id/text_remoteDomain"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/text_remoteDomain"

                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:id="@+id/row_remotePort"
            android:labelFor="@+id/text_remotePort">

            <TextView
                android:text="@string/port"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/text_remotePort"

                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/row_alertCheckbox"
            android:visibility="gone">

            <CheckBox
                android:text="@string/enable_temperature_alerts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/alertCheckbox"
                android:layout_span="2"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:textAlignment="viewStart" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/row_waterTempHeading"
            android:visibility="gone">

            <TextView
                android:text="@string/water_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:layout_span="2"
                android:layout_gravity="center"
                android:layout_marginTop="7dp"
                android:textSize="18sp"
                android:layout_marginBottom="7dp" />
        </TableRow>



        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/row_waterMin"
            android:visibility="gone">

            <TextView
                android:text="@string/minimum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:labelFor="@+id/water_min" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="2"
                android:id="@+id/water_min"
                android:inputType="number" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/row_waterMax"
            android:visibility="gone">

            <TextView
                android:text="@string/maximum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:labelFor="@+id/water_max" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="2"
                android:id="@+id/water_max"
                android:inputType="number" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/row_systemTempHeading"
            android:visibility="gone">

            <TextView
                android:text="@string/system_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:layout_span="2"
                android:layout_gravity="center"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/row_systemMin"
            android:visibility="gone">

            <TextView
                android:text="@string/minimum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:labelFor="@+id/system_min" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="2"
                android:id="@+id/system_min"
                android:inputType="number" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/row_systemMax"
            android:visibility="gone">

            <TextView
                android:text="@string/maximum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:labelFor="@+id/system_max" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="2"
                android:id="@+id/system_max"
                android:inputType="number" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="@string/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button"
                android:layout_span="2"
                android:onClick="saveSettings"
                android:layout_marginTop="12dp"/>

        </TableRow>

    </TableLayout>
</ScrollView>
</RelativeLayout>
